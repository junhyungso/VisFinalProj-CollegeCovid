{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/junhyungso/VisFinalProj-CollegeCovid/master/College-Covid.csv"
  },
  "title": {
    "text": "# of Cases at Colleges in the US",
    "anchor": "middle",
    "subtitle": "Drag to Zoom"
  },
  "vconcat": [
    {
      "mark": "bar",
      "selection": {"brush": {"type": "interval"}},
      "encoding": {
        "y": {
          "title": "Cases",
          "field": "cases",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {"type": "sqrt", "zero": false}
        },
        "x": {
          "title": "College",
          "field": "college",
          "type": "nominal",
          "axis": {"labels": false},
          "sort": {"field": "state"}
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "legend": null
        }
      }
    },
    {
      "mark": "bar",
      "transform": [{"filter": {"selection": "brush"}}],
      "encoding": {
        "x": {
          "title": "College",
          "field": "college",
          "type": "nominal",
          "sort": {"field": "state"},
          "axis": {"labels": false}
        },
        "y": {
          "title": "Cases",
          "field": "cases",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {"type": "sqrt", "zero": false}
        },
        "tooltip": [
          {"field": "college", "type": "nominal", "title": "School"},
          {
            "field": "cases",
            "aggregate": "sum",
            "type": "quantitative",
            "title": "# of Cases"
          },
          {
            "field": "state",
            "title": "State",
            "type": "nominal"
          }
        ],
        "color": {
          "field": "state",
          "type": "nominal",
          "legend": null
        }
      }
    }
  ],
  "config": {
    "background": "#f3fbfd",
    "font": "Times New Roman",
    "view": {"width": 1580, "height": 200}
  }
}